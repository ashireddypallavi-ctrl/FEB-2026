class Solution:
    def longestPalindrome(self, s: str) -> int:
        from collections import Counter

        freq = Counter(s)
        length = 0
        odd = False

        for c in freq.values():
            if c % 2 == 0:
                length += c
            else:
                length += c - 1
                odd = True

        if odd:
            length += 1

        return length
